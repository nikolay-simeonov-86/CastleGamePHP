{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body1 %}
    <br><br><br><br>
<form name="authenticate" action="{{ path('security_login') }}" method="post">
    <input type="text" name="_username">
    <input type="password" name="_password">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <input type="submit">
</form>
{% endblock body1 %}
{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div style="background:transparent !important" class="jumbotron text-center">
    <h1 class="navbarcolor">Login</h1>
    <form name="authenticate" action="{{ path('security_login') }}" method="post">

        <div class="form-group">
            <label class="navbarcolor" for="exampleInputUsername">Username</label><br/>
            <input type="text" name="_username">
            <small id="usernameHelp" class="form-text text-muted">Type in your username.</small>
        </div>
        <div class="form-group">
            <label class="navbarcolor" for="exampleInputPassword">Password</label><br/>
            <input type="password" name="_password">
            <small id="passwordHelp" class="form-text text-muted">Type in your password.</small>
        </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <a class="btn btn-lg btn-success">
            <label class="navbarcolor" for="exampleSubmitForm"></label>
            <input type="submit" class="btn btn-primary btn-outline-success btn-lg active bodytext" value="LOGIN"></a>
            {#{{ form_widget(form.LOGIN, {'attr': {'class': 'btn btn-primary btn-outline-success btn-lg active bodytext'}}) }}#}
            {#{{ form_errors(form.submit) }}#}

    </form>
    </div>


{% endblock body %}
