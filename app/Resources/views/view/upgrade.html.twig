{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body %}
<div class="center-of-page">
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col" align="center">
                <h1>Are you sure you want to upgrade the {{ building }}?</h1>
                {% if message is defined %}
                    <h2 class="text-danger">{{ message }}</h2>
                {% endif %}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col" align="center">
                <h3 class="informationtextfood">Food cost: {{ foodCost }}</h3>
                <h3 class="informationtextmetal">Metal cost: {{ metalCost }}</h3>
                <h3 class="traintime">Construction time: {{ updateTimer }} minutes</h3>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col" align="center">
                {{ form_start(form)}}
                    {{ form_widget(form.upgrade, {'attr': {'type': 'button', 'class': 'btn btn-lg btn-success bodytext cursor-pointer'}}) }}
                {{ form_end(form) }}
            </div>
            <div class="col" align="center">
                <a href="{{ path('user_castles') }}" class="btn btn-info btn-lg bg-danger active bodytext">Decline</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
