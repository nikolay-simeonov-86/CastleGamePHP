{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body %}

    <div style="background:transparent !important" class="container-fluid">
        <div class="row align-items-center center">
            <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <table class="background1 table table-inverse table-hover">
                    <tr>
                        <td>
                            <h2>ID</h2>
                        </td>
                        <td>
                            <h2>{{ user.id }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Username</h2>
                        </td>
                        <td>
                            <h2>{{ user.username }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Coordinates</h2>
                        </td>
                        <td>
                            <h2>{{ user.coordinates }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Food</h2>
                        </td>
                        <td>
                            <h2>{{ user.food }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Metal</h2>
                        </td>
                        <td>
                            <h2>{{ user.metal }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Main Castle</h2>
                        </td>
                        <td>
                            <img src="{{ user.castleIcon }}" alt="" title="{{ castles.0.name }}">
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                {#<img src="{{ castle.castlePicture }}" alt="">#}
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% set listcounter = 0 %}
                        {% for castle in castles %}
                            {% if loop.first %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{ listcounter }}" class="active"></li>
                            {% else %}
                                {% set listcounter = listcounter + 1 %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{ listcounter }}"></li>
                            {% endif %}
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for castle in castles %}
                            {% if loop.first %}
                                {% set counter = 1 %}
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="{{ castle.castlePicture }}" alt="" title="{{ castle.name }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3>{{ counter }}. {{ castle.name }}<br>(Main Castle)</h3>
                                    </div>
                                </div>
                            {% else %}
                                {% set counter = counter + 1 %}
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="{{ castle.castlePicture }}" alt="" title="{{ castle.name }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3>{{ counter }}. {{ castle.name }}</h3>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row mt-5 align-items-center center">
            <div class="col-12" align="center">
                <a href="#" class="btn btn-info btn-lg bg-danger active bodytext">ATTACK</a>
            </div>
        </div>
    </div>

{% endblock %}