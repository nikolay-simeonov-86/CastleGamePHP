{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body %}
    <div style="background:transparent !important" class="jumbotron text-center">
        <div class="row">
            <div class="col" align="center">
                <h1>Are you sure you want to train {{ amount }} of {{ army }} for {{ prizeFood }} Food and {{ prizeMetal }} Metal ?</h1>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col" align="center">
                {{ form_start(form) }}
                {{ form_widget(form.Confirm, {'attr': {'type': 'button', 'class': 'btn btn-lg btn-success bodytext'}}) }}
                {{ form_end(form) }}
            </div>
            <div class="col" align="center">
                <a href="{{ path('train_army', { 'id': id, 'army': army }) }}" class="btn btn-info btn-lg bg-danger active bodytext">Decline</a>
            </div>
        </div>
    </div>
{% endblock %}

