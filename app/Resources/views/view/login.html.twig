{% block body %}
    <div style="background:transparent !important" class="jumbotron text-center">
    <h1 class="navbarcolor">Login</h1>
    <form name="authenticate" action="{{ path('login') }}" method="post">
        {% if error != null %}
        {{ error.message }}
        {% endif %}
        <div class="form-group">
            <label class="navbarcolor" for="exampleInputUsername">Username</label><br/>
            <input type="text" name="_username">
            {{ form_errors(form._username) }}
            <small id="usernameHelp" class="form-text text-muted">Type in your username.</small>
        </div>
        <div class="form-group">
            <label class="navbarcolor" for="exampleInputPassword">Password</label><br/>
            <input type="text" name="_password">
            {{ form_errors(form._password) }}
            <small id="usernameHelp" class="form-text text-muted">Type in your password.</small>
        </div>

        <div class="btn btn-lg btn-success">
            <label class="navbarcolor" for="exampleSubmitForm"></label>
            {{ form_widget(form.LOGIN, {'attr': {'class': 'btn btn-primary btn-outline-success btn-lg active'}}) }}
            {#{{ form_errors(form.submit) }}#}
        </div>
    </form>
