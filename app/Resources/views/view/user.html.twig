{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body %}

    <div style="background:transparent !important" class="jumbotron jumbotron-fluid">
        <div class="row align-items-center center">
            <div class="col-6 col-md-auto">
                <table class="background1 table table-inverse table-hover">
                    <tr>
                        <td>
                            <h2>ID</h2>
                        </td>
                        <td>
                            <h2>{{ user.id }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Username</h2>
                        </td>
                        <td>
                            <h2>{{ user.username }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Coordinates</h2>
                        </td>
                        <td>
                            <h2>{{ user.coordinates }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Food</h2>
                        </td>
                        <td>
                            <h2>{{ user.food }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Metal</h2>
                        </td>
                        <td>
                            <h2>{{ user.metal }}</h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h2>Main Castle</h2>
                        </td>
                        <td>
                            <img src="{{ user.castleIcon }}" alt="">
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-6">
                    {#<img src="{{ castle.castlePicture }}" alt="">#}
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
                    </ol>
                    <div class="carousel-inner">
                    {% for castle in castles %}
                        {% if loop.first %}

                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="{{ castle.castlePicture }}" alt="">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3>{{ castle.name }}</h3>
                                    </div>
                                </div>
                        {% else %}

                                <div class="carousel-item">
                                    <img class="d-block w-100" src="{{ castle.castlePicture }}" alt="">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3>{{ castle.name }}</h3>
                                    </div>
                                </div>
                        {% endif %}
                    {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            </div>
        </div>
    </div>

{% endblock %}