{% extends 'view/base.html.twig' %}

{% block head %}

{% endblock %}

{% block body %}
    <div class="center-of-page">
        <div class="jumbotron text-center">
            <div class="row">
                <div class="col" align="center">
                    <h1>Are you sure you want to send an attack to <span class="text-danger">{{ battlesTemp.defender }}</span> with</h1>
                    <br>
                    <div class="text-primary"><h3>Footmen: {{ battlesTemp.footmenLvl1 + battlesTemp.footmenLvl2 + battlesTemp.footmenLvl3 }}</h3></div>
                    <div class="text-primary"><h3>Archers: {{ battlesTemp.archersLvl1 + battlesTemp.archersLvl2 + battlesTemp.archersLvl3 }}</h3></div>
                    <div class="text-primary"><h3>Cavalry: {{ battlesTemp.cavalryLvl1 + battlesTemp.cavalryLvl2 + battlesTemp.cavalryLvl3 }}</h3></div>
                    <div class="traintime">
                        <h3>
                            Reach time: {{ battlesTemp.reachTime }}
                            {% if battlesTemp.reachTime == 1 %}
                                hour
                            {% else %}
                                hours
                            {% endif %}
                        </h3>
                    </div>
                </div>
            </div>
            {% if message is defined %}
                <div class="row">
                    <div class="col" align="center">
                        <h2 class="text-danger">{{ message }}</h2>
                    </div>
                </div>
            {% endif %}
            <br>
            <div class="row">
                <div class="col" align="center">
                    {{ form_start(form) }}
                    {{ form_widget(form.Confirm, {'attr': {'type': 'button', 'class': 'btn btn-lg btn-success bodytext'}}) }}
                    {{ form_end(form) }}
                </div>
                <div class="col" align="center">
                    <a href="{{ path('user_battles_send_attack_army', { 'castleId': castleId }) }}" class="btn btn-info btn-lg bg-danger active bodytext cursor-pointer">Decline</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

