{% extends 'view/base.html.twig' %}
{% block head %}

{% endblock head %}
{% block body %}
    <div class="container h-100 d-flex">
        <div class="row align-items-center center">
            <div class="col-xs-6 col-sm-6 col-lg-6 text-center">
                <h1>Register now</h1>
                <form>
                    <div class="form-group">
                        <label for="exampleInputUsername">Username</label><br/>
                        {{ form(form.Username) }}
                        <small id="usernameHelp" class="form-text text-muted">Choose a unique username.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword">Password</label>
                        {{ form(form.Password.first) }}
                        <label for="exampleInputConfirm password">Confirm password</label>
                        {{ form(form.Password.second) }}
                        <small id="passwordHelp" class="form-text text-muted">Choose a password.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputCastle">Castle One</label>
                        {{ form(form.Select_first_Castle) }}
                        <small id="castleChooseHelp" class="form-text text-muted">Choose first castle.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputCastle">Castle Two</label>
                        {{ form(form.Select_second_Castle) }}
                        <small id="castleChooseHelp" class="form-text text-muted">Choose second castle.</small>
                    </div>
                    <button type="submit" class="btn btn-lg btn-success">REGISTER</button>
                </form>
            </div>
            <div class="col-xs-6 col-sm-6 col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/pictures/Castles/DarkCastleDwarf.jpeg" alt="First slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Dwarf Castle</h3>#}
                                {#<p>Small but strong</p>#}
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/pictures/Castles/DarkCastleNinja.png" alt="Second slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Ninja Castle</h3>#}
                                {#<p>Deadly assassins</p>#}
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/pictures/Castles/DarkCastleVampire.jpg" alt="Third slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Vampire Castle</h3>#}
                                {#<p>Strongest at night</p>#}
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/pictures/Castles/LightCastleElves.jpeg" alt="Fourth slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Elves Castle</h3>#}
                                {#<p>The forest protectors</p>#}
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/pictures/Castles/LightCastleMages.jpg" alt="Fifth slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Mage Castle</h3>#}
                                {#<p>Spellcasting cowards</p>#}
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/pictures/Castles/LightCastleOlymp.jpg" alt="Sixth slide">
                            {#<div class="carousel-caption d-none d-md-block">#}
                                {#<h3>Olymp Castle</h3>#}
                                {#<p>Gods</p>#}
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}