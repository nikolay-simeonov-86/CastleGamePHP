{% extends 'view/base.html.twig' %}
{% block head %}

{% endblock head %}

{% block body %}

        <div class="container h-100 d-flex">
            <div class="row align-items-center center">
                <div class="col-xs-6 col-sm-6 col-lg-6">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/pictures/Castles/DarkCastleDwarf.jpg" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Dwarf Castle</h3>
                                    <p>Small but strong</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/pictures/Castles/DarkCastleNinja.jpg" alt="Second slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Ninja Castle</h3>
                                    <p>Deadly assassins</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/pictures/Castles/DarkCastleVampire.jpg" alt="Third slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Vampire Castle</h3>
                                    <p>Strongest at night</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/pictures/Castles/LightCastleElves.jpg" alt="Fourth slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Elves Castle</h3>
                                    <p>The forest protectors</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/pictures/Castles/LightCastleMages.jpg" alt="Fifth slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Mage Castle</h3>
                                    <p>Spellcasting cowards</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/pictures/Castles/LightCastleOlymp.jpg" alt="Sixth slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Olymp Castle</h3>
                                    <p>Gods</p>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-lg-6 text-center">
                    <h1 class="navbarcolor">Register now</h1>
                    {{ form_start(form) }}
                    <form name="register" action="{{ path('register') }}" method="post">
                        <div class="form-group">
                            <label  class="navbarcolor" for="app_bundle_user_register_Username">Username</label><br/>
                            {{ form_widget(form.username) }}<br>
                            <small id="usernameHelp" class="form-text text-muted navbarcolor">Choose a unique username.</small><br>

                            <label class="navbarcolor" for="app_bundle_user_register_Password_first">Password</label><br>
                            {{ form_widget(form.password.first) }}<br>
                            <label class="navbarcolor" for="app_bundle_user_register_Password_second">Confirm password</label><br>
                            {{ form_widget(form.password.second) }}<br>
                            <small id="passwordHelp" class="form-text text-muted navbarcolor">Choose a password.</small><br>

                            <label class="navbarcolor" for="app_bundle_user_register_castle1">Castle One</label><br>
                            {{ form_widget(form.castle1) }}<br>
                            <small id="castleChooseHelp" class="form-text text-muted navbarcolor">Choose first castle.</small><br>

                            <label class="navbarcolor" for="app_bundle_user_register_castle2">Castle Two</label><br>
                            {{ form_widget(form.castle2) }}<br>
                            <small id="castleChooseHelp" class="form-text text-muted navbarcolor">Choose second castle.</small><br>

                            {{ form_row(form._token) }}<br>
                        <div class="btn btn-lg btn-success">
                            <label class="navbarcolor" for="app_bundle_user_register_REGISTER"></label>
                            {{ form_widget(form.REGISTER, {'attr': {'class': 'btn btn-primary btn-outline-success btn-lg active bodytext'}}) }}<br>
                        </div>
                        </div>
                    </form>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

{% endblock body %}